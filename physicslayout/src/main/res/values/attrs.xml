<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Physics">

        <!--Turn on and off physics-->
        <attr name="physics" format="boolean"/>
        <!--Set the X component of gravity-->
        <attr name="gravityX" format="float"/>
        <!--Set the Y component of gravity-->
        <attr name="gravityY" format="float"/>
        <!--Define if the view should have outer boundaries-->
        <attr name="bounds" format="boolean"/>
        <!--Set the width of the boundaries-->
        <attr name="boundsSize" format="dimension"/>
        <!--Turn on and off flinging-->
        <attr name="fling" format="boolean"/>
        <!--Set the number of velocity iterations-->
        <attr name="velocityIterations" format="integer"/>
        <!--Set the number of position iterations-->
        <attr name="positionIterations" format="integer"/>
        <!--Set the number of pixels per meter-->
        <attr name="pixelsPerMeter" format="float"/>

    </declare-styleable>

    <declare-styleable name="Physics_Layout">
        <attr name="layout_shape" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="layout_allowRotation" format="boolean"/>
        <attr name="layout_circleRadius" format="dimension"/>
    </declare-styleable>

</resources>